{
  "copyFiles": [
    {
      "from": "web/index.html",
      "to": "web-build/index.html",
      "force": true
    },
    {
      "from": "web/manifest.json",
      "to": "web-build/manifest.json"
    },
    {
      "from": "web/service-worker.js",
      "to": "web-build/service-worker.js"
    }
  ],
  "runAfterCopy": [
    {
      "name": "Generate PWA Icons",
      "command": "node scripts/generate-pwa-icons.js"
    },
    {
      "name": "Fix index.html",
      "command": "node scripts/fix-index-html.js"
    }
  ]
} 